<% @people.each do |person| %>
<li>
  <% (0..person[:generation]).each do |i| %>
    <% if i>0 %>
      ----
    <% end %>
  <% end %>
  <%= link_to "#{person[:person].with_spouse_name}", person[:person]%>
  <% if person[:person].spouse %>
    <%= link_to "#{person[:person].spouse.name}", person[:person].spouse%>
  <% end %>
  <%= link_to "edit", edit_person_url(person[:person]) %>
  <%= person[:person].birthday %>
  <%= link_to "new relationship", new_relationship_url(:id => person[:person].id) %>
</li>
<% end %>
